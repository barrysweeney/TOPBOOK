<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/navbar") %> <% if (friendRequests.length > 0) { %>
    <ul>
      <!-- loop over each user who has sent a friedn request and link to their profile and display a button to accept the request -->
      <% friendRequests.forEach(friendRequest => { %>
      <li>
        Friend request from
        <a href="/users/<%= friendRequest.user._id %>/profile"
          ><%= friendRequest.user.name %></a
        >
        is pending
        <form
          action="/users/friendships/<%= friendRequest.id %>/accept"
          method="POST"
        >
          <button>Accept</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% }else{ %>
    <p>No new friend requests received</p>
    <% } %>
  </body>
</html>
